# Environment Configuration File
# Copy this file to .env and modify the values as needed

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Security Settings
SECRET_KEY=your-secret-key-here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60

# Database Settings (if using database in future)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=dork_generator
DB_USERNAME=your_username
DB_PASSWORD=your_password

# External API Keys (if integrating with search APIs)
GOOGLE_API_KEY=your-google-api-key
BING_API_KEY=your-bing-api-key

# Logging Settings
LOG_LEVEL=info
LOG_FILE=logs/application.log

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Features
ENABLE_EXPORT=true
ENABLE_HISTORY=true
ENABLE_ANALYTICS=false

# Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# File Upload (if adding file upload features)
MAX_FILE_SIZE=10M
ALLOWED_FILE_TYPES=txt,log,sql,conf,xml

# Email Settings (for notifications if implemented)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls

# Admin Settings
ADMIN_EMAIL=admin@example.com
MAINTENANCE_MODE=false

# Third-party Integrations
GOOGLE_ANALYTICS_ID=UA-XXXXXX-X
SENTRY_DSN=https://your-sentry-dsn
